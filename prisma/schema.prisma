generator client {
  provider        = "prisma-client"
  output          = "./generated/prisma"
  previewFeatures = ["multiSchema", "views"]
}

datasource db {
  provider = "postgresql"
  schemas  = ["public"]
}

model user_tokens {
  clerk_user_id   String          @id @unique
  gmail_email     String          @unique
  created_at      DateTime        @default(now()) @db.Timestamp(6)
  updated_at      DateTime        @default(now()) @db.Timestamp(6)
  last_history_id String?
  watch_activated Boolean         @default(false)
  drafts          drafts[]
  email_tracked   email_tracked[]
  user_tags       user_tags[]

  @@schema("public")
}

model tag {
  id            String          @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name          String          @unique
  created_at    DateTime        @default(now()) @db.Timestamptz(6)
  color         String          @unique
  email_tracked email_tracked[]
  user_tags     user_tags[]

  @@schema("public")
}

model user_tags {
  user_id     String
  tag_id      String      @db.Uuid
  created_at  DateTime?   @default(now()) @db.Timestamptz(6)
  tag         tag         @relation(fields: [tag_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "user_tags_tag_fkey")
  user_tokens user_tokens @relation(fields: [user_id], references: [clerk_user_id], onDelete: Cascade, onUpdate: NoAction, map: "user_tags_user_fkey")

  @@id([user_id, tag_id])
  @@index([tag_id], map: "idx_user_tags_tag_id")
  @@index([user_id], map: "idx_user_tags_user_id")
  @@schema("public")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model email_tracked {
  user_id     String
  tag_id      String      @db.Uuid
  message_id  String      @unique
  created_at  DateTime    @default(now()) @db.Timestamptz(6)
  drafts      drafts[]
  tag         tag         @relation(fields: [tag_id], references: [id], onDelete: Cascade)
  user_tokens user_tokens @relation(fields: [user_id], references: [clerk_user_id], onDelete: Cascade)

  @@id([user_id, tag_id, message_id])
  @@index([user_id], map: "idx_tracked_user")
  @@index([user_id, message_id], map: "idx_tracked_user_message")
  @@index([user_id, tag_id], map: "idx_tracked_user_tag")
  @@schema("public")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model drafts {
  user_id       String        @default(dbgenerated("gen_random_uuid()"))
  message_id    String        @default(dbgenerated("gen_random_uuid()"))
  draft         String
  created_at    DateTime      @default(now()) @db.Timestamptz(6)
  receipent     String
  email_tracked email_tracked @relation(fields: [message_id], references: [message_id], onDelete: Cascade)
  user_tokens   user_tokens   @relation(fields: [user_id], references: [clerk_user_id], onDelete: Cascade)

  @@id([user_id, message_id])
  @@schema("public")
}
